[alias]
    a   = add
    b   = branch -a
    sw  = switch
    swm = switch master
    swd = switch develop
    cm  = commit -m
    dif = diff --color-words
    l   = log --graph --decorate --date=iso --pretty='%ad%C(auto) %h%d %Cgreen%an%Creset %s'
    pp  = pull --prune
    pr  = pull-request
    rh  = reset HEAD
    st  = status --untracked-files=all --short --branch
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[core]
    editor = vim
    pager = lv -c
    quotepath = false
    attributesfile = ~/.gitattributes_global
    excludesfile = ~/.gitignore_global
[color]
    ui = auto
[push]
    default = simple
[hub]
    protocol = https
[credential]
    helper = osxkeychain
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
