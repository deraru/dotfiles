# prompt
PROMPT="[%n@%m %~]$ "

# shortcut
alias ll="ls -l"

# vim
alias vim="/Applications/MacVim.app/Contents/MacOS/Vim"

# rbenv
eval "$(rbenv init -)"

# hub command
eval "$(hub alias -s)"

# heroku toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

# Postgres
export PATH="/Applications/Postgres.app/Contents/MacOS/bin:$PATH"

# MySQL
export PATH="/usr/local/mysql/bin:$PATH"
